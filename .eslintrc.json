{
    "rules": {
        "indent": "off",
        "no-undef": "off",
        "space-before-function-paren": [
            2,
            {
                "anonymous": "always",
                "named": "never"
            }
        ],
        "no-plusplus": "off",
        "no-continue": "off",
        "consistent-return": "off",
        "no-prototype-builtins": "off",
        "arrow-parens": "off",
        "object-shorthand": "off",
        "object-curly-spacing": "off",
        "arrow-body-style": "off",
        "no-tabs": "off",
        "no-debugger": "off",
        "no-use-before-define": 0,
        "max-len": [
            2,
            160
        ],
        // TODO: turn on later
        "comma-dangle": [
            0
        ],
        "import/no-extraneous-dependencies": [
            2,
            {
                "devDependencies": true
            }
        ],
        "no-underscore-dangle": [
            0
        ]
    },
    "env": {
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base"
    ]
}
